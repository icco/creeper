<div class="unit span-grid">
  <div class="config">
    <% form_tag '/config/update', :class => 'pure-form', :method => 'post' do %>
      <fieldset>
        <legend>Config Git Repo</legend>
        <%= text_field_tag :location, :value => current_user.repo, :placeholder => "git@github.com:user/repo.git", :class => "unit four-of-five" %>
        <%= submit_tag 'Update', :class => 'pure-button pure-button-primary pure-button-small unit one-of-five', :style => "line-height: 1rem;"%>
      </fieldset>
    <% end %>
  </div>

  <table class="pure-table pure-table-striped unit span-grid">
    <thead>
      <tr>
        <th>Site</th>
        <th>Repo</th>
      </tr>
    </thead>

    <tbody>
      <% @config.sites.each do |site| %>
        <tr>
          <td><%= site.name %></td>
          <td><%= site.repo %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

