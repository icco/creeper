<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>CreeperMon <%= title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_link_tag 'application' %>

    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="container" role="main">
      <div class="grid">
        <header class="unit span-grid" role="banner">
        <h1 class="site-title"><a href="<%= url(:home) %>">CreeperMon</a></h1>
        <h2 class="site-tagline">A monitoring tool<%== " for #{link_to(current_user.name, url(:user, :edit))}" if current_user %>.</h2>
        </header>

        <hr class="unit span-grid">

        <%= yield %>
      </div>
    </div>

    <%= javascript_include_tag  'application' %>
    <!--
    ENV: <%= Padrino.env %>
    <%= ENV.inspect if Padrino.env.eql? :development %>
    -->
  </body>
</html>
